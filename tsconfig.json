{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@domain": ["src/domain"],
      "@domain/*": ["src/domain/*"],
      "@application": ["src/application"],
      "@application/*": ["src/application/*"],
      "@ports": ["src/ports"],
      "@ports/*": ["src/ports/*"],
      "@infrastructure": ["src/infrastructure"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "declaration": false,
    "declarationMap": false,
    "outDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedDeclarations": false,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "src/shared/types.ttxt"],
  "exclude": [
    "node_modules",
    "dist",
    "reports",
    "coverage",
    "stryker-tmp",
    "*.config.ts",
    "*.config.js",
    "tsdown.config.ts",
    "vitest.config.ts"
  ]
}
